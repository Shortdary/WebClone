@model List<PostWithUser>
@{
    ViewData["Title"] = "인기글 - 짭하하";
}

<article id="list">
    <section id="title">
        <h1>
            <div style="font-weight: 700; font-size: 21px">인기글</div>
            <div class="description">추천 많이 받으면 올라갑니다</div>
        </h1>
    </section>
    <section id="boardList">
        @foreach (var p in Model)
        {
            <a class="item" href="/best/@p.Id">
                <div class="image">
                    <img src="/asset/thumbnail.png">
                </div>
                <div class="info">
                    <div class="titleContainer">
                        <span class="category">침착맨 짤</span> <!-- TODO: 게시판 종류 달기 -->
                        <span class="title">
                            <span class="text">@p.Subject</span>
                            <span class="commentCount">@p.CommentCount</span>
                        </span>
                    </div>
                    <div class="etc">
                        <div class="nickName">@p.Nickname</div>
                        <div class="dot"></div>
                        <div class="datetime">@p.CreatedTime</div>
                        <div class="dot"></div>
                        <div class="viewCount"><i class="fa-regular fa-eye"></i>@p.ViewCount</div>
                        <div class="dot"></div>
                        <div class="likeCount"><i class="fa-regular fa-thumbs-up"></i>@p.LikeCount</div>
                    </div>
                </div>
            </a>
        }
    </section>
</article>

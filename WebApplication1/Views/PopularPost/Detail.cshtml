@model PostWithUser
@{
    ViewData["Title"] = $"{Model.Subject}";
}
<link rel="stylesheet" href="@(Url.Content("~/css/Detail.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/Comment.css"))" /> /* TODO: 나중에 분리 */

<article id="article">
    <div class="sub">
        <div class="back"><a href="/best?page=1">인기글 &gt;</a></div>
    </div>


    <div class="item">
        <div class="info">
            <div class="titleContainer">
                <div class="category" title="침착맨">
                    <span><a href="/stream_free">침착맨</a></span>
                </div>
                <span><h1>@Model.Subject</h1></span>
            </div>
            <div class="etc">
                <div class="left">
                    <div class="userImage" style="background-image: url('/assets/userImage.svg');"></div>
                    <div class="nickName">
                        @Model.Nickname
                    </div>
                    <div class="dot"></div>
                    <div class="datetime">@Model.CreatedTime</div>
                    <div class="dot"></div>
                    <div class="viewCount">
                        <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye" class="svg-inline--fa fa-eye fa-w-18" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                            <path fill="currentColor" d="M288 144a110.94 110.94 0 0 0-31.24 5 55.4 55.4 0 0 1 7.24 27 56 56 0 0 1-56 56 55.4 55.4 0 0 1-27-7.24A111.71 111.71 0 1 0 288 144zm284.52 97.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 0 0 0 0-29.19zM288 400c-98.65 0-189.09-55-237.93-144C98.91 167 189.34 112 288 112s189.09 55 237.93 144C477.1 345 386.66 400 288 400z"></path>
                        </svg>@Model.ViewCount
                    </div>
                    <div class="dot"></div>
                    <div class="likeCount"><i class="fa-regular fa-thumbs-up"></i> @Model.LikeCount</div>
                </div>
            </div>
        </div>
        <div class="content ck-content"><figure class="image"><img src="https://resources.chimhaha.net/article/1709540184992-bboqyxi2lwi.webp"></figure><p>44444444</p></div>

        <section id="adsense" class="articleCenter"><ins class="adsbygoogle" style="display: inline-block; text-decoration: none; height: 100px; max-height: inherit; min-height: 100px; min-width: 320px; width: 100%;" data-ad-client="ca-pub-3075483251413145" data-ad-slot="2335434047" data-adsense-index="2"></ins></section>
        <div class="likeContainer">
            <button id="like" class="like">
                <span>침하하</span>
                <span>😂</span>
            </button>
            <button id="scrap" class="scrap">
                <span>스크랩</span><span><i class="fa-regular fa-bookmark"></i></span>
            </button>
        </div>
        <div class="listAndEdit">
            <div class="left">
            </div>
            <div class="center">
                <div class="button">
                    <a href="/best?page=1">
                        목록
                    </a>
                </div>
            </div>
            <div class="right">
            </div>
        </div>
        <partial name="../Comment/Index.cshtml" />
        
        <div class="listAndEdit">
            <div class="left">
                <div class="button">
                    <a href="/best?page=1">
                        목록
                    </a>
                </div>
            </div>
            <div class="right">
            </div>
        </div>
        <br>
    </div>




</article>